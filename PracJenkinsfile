node{
   stage('SCM Checkout'){
     git 'https://github.com/Rameshdutt80/java-docker-jenkins.git'
   }
   stage('Compile-Package'){
      // Get maven home path
      def mvnHome =  tool name: 'maven', type: 'maven'   
      sh "${mvnHome}/bin/mvn package"
   }
   stage('Build Docker Image'){
       
       sh 'docker build -t rameshdutt80/sql:1.0 .'
   }
   stage('Upload Image to DockerHub'){
       withCredentials([usernamePassword(credentialsId: 'gitdockerpwd', passwordVariable: 'dkpwd', usernameVariable: 'dkuser')]) {
           sh "docker login -u rameshdutt80 -p ${dkpwd}"
        }
        sh 'docker push rameshdutt80/mysql:1.0'
   }
   stage('Run Container'){
       sh label: '', script: 'docker rm $(docker ps -a -q)'
	   sh label: '', script: 'docker rmi $(docker images)'
   }
}
